/* pages/index/lists/lists.wxss */

.zzq_index_list {
  width: 100%;
  background-color: #f7f7f7;
}

.zzq_index_list_screen {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  line-height: 2.5;
  background-color: #fff;
  font-size: 37rpx;
}

.zzq_list_scr_icon {
  width: 0;
  height: 0;
  border-width: 15rpx 15rpx;
  border-style: solid;
  border-color: transparent transparent #999;
  margin: 20rpx auto;
  position: relative;
  top: -25rpx;
  left: 10rpx;
}

.zzq_nav_eat {
  margin: 20rpx 0;
  background-color: #fff;
  height: 880rpx;
  padding-top: 25rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.zzq_nav_eat_shop {
  float: left;
}

.zzq_nav_eat_shop {
  width: 50%;
  margin-bottom: 20rpx;
}

.zzq_nav_eat_shop>view>image {
  width: 100%;
  height: 300rpx;
  border-top-right-radius: 20rpx;
  border-top-left-radius: 20rpx;
}

.zzq_nav_eat_shop>view {
  margin: 0 10rpx;
  position: relative;
  background-color: #fff;
  border-bottom-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}

.dfs {
  position: absolute;
  color: #fff;
  font-size: 28rpx;
  left: 30rpx;
  top: 10rpx;
  width: 90rpx;
  height: 40rpx;
  background: rgba(8, 8, 8, 0.4);
}

.zzq_nav_eat_img {
  margin-top: 20rpx;
  height: 1200rpx;
}

.zzq_nav_eat_res {
  font-size: 35rpx;
  padding: 15rpx 0;
}

.zzq_nav_eat_mon2 {
  color: #f60;
  font-size: 30rpx;
  background-color: #ffefe5;
  border: 1px solid #f60;
  padding: 5rpx 10rpx;
  margin-left: 10rpx;
  border-radius: 10rpx;
}

.zzq_nav_eat_m {
  color: #f60;
  font-size: 35rpx;
}

.zzq_ret_list_area>text {
  color: #999;
  font-size: 32rpx;
}

.zzq_ret_list_area_mon {
  text-decoration: line-through;
  float: left;
}

.zzq_ret_list_area_mon_rig {
  float: right;
}

.zzq_ret_list_area {
  margin-top: 15rpx;
  height: 60rpx;
}
