
.zzq_nav_eat {
  margin: 20rpx 0;
  background-color: #fff;
  height: 880rpx;
  padding-top: 25rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.zzq_nav_eat_shop {
  float: left;
}

.zzq_nav_eat_shop_rig {
  float: right;
}

.zzq_nav_eat_shop, .zzq_nav_eat_shop_rig {
  width: 50%;
  text-align: center;
  height: 410rpx;
}

.zzq_nav_eat_shop_rig>view>image, .zzq_nav_eat_shop>view>image {
  width: 100%;
  height: 280rpx;
  border-radius: 20rpx;
}

.zzq_nav_eat_shop_rig>view, .zzq_nav_eat_shop>view {
  padding: 0 10rpx;
  position: relative;
}

